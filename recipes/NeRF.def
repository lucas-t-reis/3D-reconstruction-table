Bootstrap: library
From: ubuntu:20.04

%runtime
echo '#!/bin/bash
wget https://repo.anaconda.com/miniconda/Miniconda3-py38_23.1.0-1-Linux-x86_64.sh -O ~/miniconda.sh
bash ~/miniconda.sh -b -p $HOME/miniconda
git clone https://github.com/bmild/nerf.git
git clone https://github.com/lucas-t-reis/LLFF.git
cd LLFF
pip install -r requirements.txt
cd ..
cd nerf
export PATH=$HOME/miniconda/bin:$PATH
conda env create -f environment.yml
conda init bash' > build-anaconda-env.sh


%post
	apt-get update
	apt-get install -y --no-install-recommends python3
	apt-get -y clean
	export DEBIAN_FRONTEND=noninteractive
	export CUDACXX=/usr/bin/nvcc
	apt-get install -y tzdata gcc cmake git pip
	apt-get install -y curl zip unzip tar wget
	apt-get install -y \
	nvidia-cuda-toolkit \
	nvidia-cuda-toolkit-gcc
	apt-get install -y \
	ninja-build \
	build-essential \
	libboost-program-options-dev \
	libboost-filesystem-dev \
	libboost-graph-dev \
	libboost-system-dev \
	libboost-test-dev \
	libeigen3-dev \
	libflann-dev \
	libfreeimage-dev \
	libmetis-dev \
	libgoogle-glog-dev \
	libgflags-dev \
	libsqlite3-dev \
	libglew-dev \
	libglfw3-dev \
	qtbase5-dev \
	libqt5opengl5-dev \
	libcgal-dev \
	libceres-dev
	git clone https://github.com/lucas-t-reis/colmap.git
	cd colmap
	mkdir build
	cd build
	cmake .. -GNinja
	ninja
	ninja install
